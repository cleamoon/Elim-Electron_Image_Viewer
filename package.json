{
  "name": "elim",
  "version": "0.1.1",
  "description": "A minimal image viewer written in Electron and Vue.js",
  "main": "src/main/main.ts",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "clean": "rm -rf node_modules && rm -rf build && mkdir build && rm -rf dist && mkdir dist && rm -rf dist-electron && mkdir dist-electron",
    "build": "node scripts/build.js && electron-builder",
    "build:win": "node scripts/build.js && electron-builder --win",
    "build:mac": "node scripts/build.js && electron-builder --mac",
    "build:linux": "node scripts/build.js && electron-builder --linux",
    "start": "electron-forge start",
    "publish": "electron-forge publish",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/cleamoon/Elim-Electron_Image_Viewer",
  "author": {
    "name": "Yue Jiao",
    "url": "https://yj0.se"
  },
  "devDependencies": {
    "@electron-forge/cli": "7.3.0",
    "@electron-forge/maker-deb": "7.3.0",
    "@electron-forge/maker-rpm": "7.3.0",
    "@electron-forge/maker-squirrel": "7.3.0",
    "@electron-forge/maker-zip": "7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "7.3.0",
    "@electron-forge/plugin-fuses": "7.3.0",
    "@electron-forge/publisher-github": "7.3.0",
    "@electron/fuses": "1.7.0",
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@vitejs/plugin-vue": "4.0.0",
    "@vue/eslint-config-typescript": "12.0.0",
    "chalk": "4.1.2",
    "chokidar": "3.5.3",
    "electron": "25.2.0",
    "eslint": "8.0.1",
    "eslint-config-standard-with-typescript": "39.1.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0 || 16.0.0 ",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-vue": "9.17.0",
    "typescript": "*",
    "vite": "4.1.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.0",
    "update-electron-app": "3.0.0",
    "vue": "3.2.47"
  }
}